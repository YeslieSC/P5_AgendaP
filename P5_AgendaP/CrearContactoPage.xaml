<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P5_AgendaP.CrearContactoPage"
             Title="CrearContactoPage">
    
    <FlexLayout Direction="Column" AlignItems="Start" JustifyContent="Center" Padding="20">
        <Entry x:Name="nombreEntry" Placeholder="Nombre" WidthRequest="250" />
        <Entry x:Name="telefonoEntry" Placeholder="Telefono" WidthRequest="250" />
        <Entry x:Name="correoEntry" Placeholder="Correo" WidthRequest="250" />
        <Button Text="Guardar Contacto" WidthRequest="250" Clicked="GuardarContacto"/>
    </FlexLayout>
    
</ContentPage>