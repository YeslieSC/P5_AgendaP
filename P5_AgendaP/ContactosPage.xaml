<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P5_AgendaP.ContactosPage"
             Title="ContactosPage">
    
    <VerticalStackLayout Padding="10">
        <Label Text="Contactos" FontSize="Large" />
        <CollectionView x:Name="ContactosListView" ItemsSource="{Binding contactos}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5" Padding="10">
                        <StackLayout>
                            <Label Text="{Binding Nombre}" FontAttributes="Bold" />
                            <Label Text="{Binding Telefono}" />
                            <Label Text="{Binding Correo}" />
                            <Button Text="Detalles" Clicked="IrDetalleContacto" BindingContext="{Binding}" />
                        </StackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
    
</ContentPage>