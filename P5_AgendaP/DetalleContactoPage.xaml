<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P5_AgendaP.DetalleContactoPage"
             Title="DetalleContactoPage">
    
    <Grid Padding="10" ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
        <Label Text="Nombre:" FontAttributes="Bold" />
        <Label x:Name="NombreLabel" Grid.Row="0" Grid.Column="1" />
        <Label Text="Teléfono:" FontAttributes="Bold" />
        <Label x:Name="TelefonoLabel" Grid.Row="1" Grid.Column="1" />
        <Label Text="Correo:" FontAttributes="Bold" />
        <Label x:Name="CorreoLabel" Grid.Row="2" Grid.Column="1" />
        <Label Text="Dirección:" FontAttributes="Bold" />
        <Label x:Name="DireccionLabel" Grid.Row="3" Grid.Column="1" />
    </Grid>
    
</ContentPage>