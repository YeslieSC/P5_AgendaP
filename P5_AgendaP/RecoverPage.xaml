<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P5_AgendaP.RecoverPage"
             Title="Recuperar Contraseña">
    <VerticalStackLayout Padding="20">
        <Label Text="Recupera tu contraseña" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Label Text="Ingresa tu correo electrónico y te enviaremos instrucciones para recuperar tu cuenta."
               FontSize="16" TextColor="Gray" Padding="10"/>

        <Entry x:Name="EmailEntry" Placeholder="Correo electrónico"
               Keyboard="Email" FontSize="18"/>

        <Button Text="Enviar recuperación"
                Clicked="OnRecoverClicked"
                BackgroundColor="Blue" TextColor="White"
                Margin="10"/>

        <Label x:Name="StatusLabel" Text="" TextColor="Green"
               FontSize="14" HorizontalOptions="Center"/>

        <Button Text="Volver" Clicked="OnBackClicked" HorizontalOptions="Start" Margin="0,10,0,0"/>
    </VerticalStackLayout>
</ContentPage>