<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="P5_AgendaP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:P5_AgendaP"
    Shell.FlyoutBehavior="Flyout"
    Title="P5_AgendaP">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />

    <ShellContent 
        Route="ConfiguracionPage" 
        ContentTemplate="{DataTemplate local:ConfiguracionPage}" />

    <ShellContent
        Title="Registro"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />

    <ShellContent
        Title="Recuperar"
        ContentTemplate="{DataTemplate local:RecoverPage}"
        Route="RecoverPage" />

</Shell>

